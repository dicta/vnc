<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

<android.androidVNC.VncCanvas
    android:id="@+id/vnc_canvas"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="bottom|center"
    >
</android.androidVNC.VncCanvas>
  
<ZoomControls
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/zoomer"
    android:layout_gravity="bottom|center"
/>
<Button android:id="@+id/showkbd" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/btn_keypad"
        android:text="@string/showkbd_label"
        android:layout_gravity="bottom|left" />
</FrameLayout>
